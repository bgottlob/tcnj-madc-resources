<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity"
                android:id="@+id/person_view_layout">

	<TextView
		 android:text="@string/first_name"
		 android:layout_width="match_parent"
		 android:layout_height="wrap_content"
		 android:layout_marginTop="28dp"
		 android:id="@+id/first_name_label"
		 android:inputType="none"
		 android:layout_alignParentTop="true"
		 android:layout_alignParentRight="true"
		 android:layout_alignParentEnd="true"/>

	<TextView
		 android:layout_width="match_parent"
		 android:layout_height="wrap_content"
		 android:text="@string/last_name"
		 android:id="@+id/last_name_label"
		 android:layout_below="@+id/first_name_label"
		 android:layout_alignParentLeft="true"
		 android:layout_alignParentStart="true"/>

	<TextView
		 android:layout_width="match_parent"
		 android:layout_height="wrap_content"
		 android:text="@string/age"
		 android:id="@+id/age_label"
		 android:layout_below="@+id/last_name_label"
		 android:layout_alignParentLeft="true"
		 android:layout_alignParentStart="true"/>

	<Button
		 android:layout_width="wrap_content"
		 android:layout_height="wrap_content"
		 android:text="@string/person1"
		 android:id="@+id/person1_button"
		 android:layout_centerVertical="true"
		 android:layout_centerHorizontal="true"/>

	<Button
		 android:layout_width="wrap_content"
		 android:layout_height="wrap_content"
		 android:text="@string/person2"
		 android:id="@+id/person2_button"
		 android:layout_below="@+id/person1_button"
		 android:layout_centerHorizontal="true"/>

	<Button
		 android:layout_width="wrap_content"
		 android:layout_height="wrap_content"
		 android:text="Person 3"
		 android:id="@+id/person3_button"
		 android:layout_below="@+id/person2_button"
		 android:layout_centerHorizontal="true"/>

</RelativeLayout>
